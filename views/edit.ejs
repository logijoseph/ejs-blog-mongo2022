<%- include ("./templates/_header") %>

<main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        
        <form action="/editPost/<%= postToEdit._id %>" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= postToEdit.title %>">
          </div>
          <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Author" value="<%= postToEdit.author %>">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="post_data" cols="100" rows="10" placeholder="Add a Description"><%= postToEdit.post_data %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </main>

<%- include ("./templates/_footer") %>